@model Produto

<div class="d-flex">
    <h1 class="flex-grow-1">
        Editar Produto
    </h1>
    <form asp-action="Apagar">
        <input hidden asp-for="ProdutoId" />
        <input type="submit" value="Apagar" class="btn btn-danger" />
    </form>
</div>
<hr>

<form action="Editar" method="post">

    <input hidden asp-for="ProdutoId" />

    <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">Nome</span>
        <input type="text" class="form-control" name="nome" placeholder="Nome do produto" >
    </div>

    <div class="row-md">
        <div class="col-md-6 input-group mb-3">
            <span class="input-group-text" id="basic-addon1">Quantidade</span>
            <input class="form-control" name="quantidade" type="number" placeholder="Quantidade de produtos">
        </div>

        <div class="col-md-6 input-group mb-3">
            <span class="input-group-text" id="basic-addon1">Valor</span>
            <input class="form-control" name="valor" type="number" placeholder="Valor do produto" >
        </div>
    </div>

    <div class="form-group mt-5">
        <a asp-action="listar" class="btn btn-light"> Cancelar</a>
        <button type="submit" class="btn btn-primary"> Salvar</button>
    </div>
    
</form>