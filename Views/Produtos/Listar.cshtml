@using System.Globalization;
@model List<Produto>

<div class="d-flex">
    <h1 class="flex-grow-1">
        Listar Produto
    </h1>
</div>
<hr>

<div class="list-group">
    @foreach (var item in Model)
    {
        <a class="list-group-item list-group-item-secondary d-flex justify-content-between align-items-center" asp-action="Editar" asp-route-id="@item.ProdutoId">
            <span class='flex-grow-1'>
                @item.Nome - Quantidade: @item.Quantidade - Pre√ßo: @item.Valor.ToString("C", CultureInfo.CreateSpecificCulture("pt-BR"))
            </span>
        </a>
    }
</div>